{
    "name": "krakjoe/mimus",
    "require": {
        "php": "7.*",
        "ext-componere": "^2.1.4"
    },
    "repositories": {
        "phpunit": {
		"type": "vcs",
		"url": "https://github.com/krakjoe/phpunit"	
	},
        "php-code-coverage": {
		"type": "vcs",
		"url": "https://github.com/krakjoe/php-code-coverage"	
	}
    },
    "require-dev": {
        "phpunit/phpunit": "dev-pcov as 7.5.2",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "mimus\\": "src/mimus"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mimus\\tests\\": "tests/"
        }
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true
}
